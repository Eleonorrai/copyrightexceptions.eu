[
{{- $pages := sort .Pages ".File.Dir" -}}
{{- $len := (len $pages) -}}

{{- range $index, $element := $pages -}}
	{"title" : "{{ .Title }}", "short" : {{ if isset .Params "short" }}"{{ index .Params "short" }}"{{else}}""{{ end }}
	{{- if not (eq (add $index 1) $len) -}}
		},
	{{- else -}}
		}
	{{- end -}}
{{ end }}
]